{
  "typescript.tsdk": "node_modules/typescript/lib", // Use the workspace's version of TypeScript
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier as the default formatter for TypeScript files
  },
  "eslint.validate": ["javascript", "typescript"],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.formatOnSaveMode": "file",
  "prettier.requireConfig": true, // Only format files that have a Prettier config
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "dist": true,
    "node_modules": true
  },
  "typescript.preferences.importModuleSpecifier": "relative", // Use relative paths for TypeScript imports
}
